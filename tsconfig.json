{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es6",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
    "watch": false,
    "noImplicitAny": true,
    "baseUrl": "."
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
